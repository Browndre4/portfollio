    <script>
        function openForm() { document.getElementById("myForm").style.display = "block"; }
        function closeForm() { document.getElementById("myForm").style.display = "none"; }

        function sendMessage() {
            const userMessage = document.getElementById("msg").value.trim();
            if (userMessage === "") return;

            const chatContainer = document.getElementById("chat-container");
            chatContainer.innerHTML += `<div class="user-message">You: ${userMessage}</div>`;
            document.getElementById("msg").value = "";

            setTimeout(() => {
                chatContainer.innerHTML += `<div class="bot-message">Bot: I'm here to assist you!</div>`;
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }, 1000);
        }

        window.onload = () => { document.getElementById("send-btn").addEventListener("click", sendMessage); };
    </script>
