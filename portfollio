    <div class="chat-popup" id="myForm">
        <form action="javascript:void(0);" class="form-container">
            <h1>Chat</h1>
            <div id="chat-container"></div>
            <textarea id="msg" placeholder="Type message..." required></textarea>
            <button type="button" id="send-btn" class="btn">Send</button>
